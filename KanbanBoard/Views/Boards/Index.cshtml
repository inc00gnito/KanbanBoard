@model IEnumerable<KanbanBoard.Models.Board>

@{
    ViewData["Title"] = "All Boards";
}

<h1>All boards</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create Board</a>
</p>

<div >
    @for (int i = 0; i < Model.Count(); i += 3)
    {
        <div class="row" >
            @{
                int j = 0;
                for (; j <= 2 && i + j < Model.Count(); j++)
                {
                    
                    <div class="col-md-4" style="margin-bottom: 5em">
                        @await Html.PartialAsync("_BoardSummary",Model.ElementAt(i+j))
                        
                    </div>

                }
            }
        </div>
    }
</div>
