@model Board

<div class="card">
    <div class="card-body">
        <a asp-action="Details" class="alert-dark" asp-route-id="@Model.Id">
            <h4 class="card-title">@Model.Name</h4>
        </a>
        <hr />
        <div class="card-text">
            <a class="btn btn-secondary " asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit"></i></a> |
            <a class="btn btn-info" asp-action="Details" asp-route-id="@Model.Id"><i class="fa fa-info-circle"></i></a> |
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-minus"></i></a>
        </div>
    </div>


</div>