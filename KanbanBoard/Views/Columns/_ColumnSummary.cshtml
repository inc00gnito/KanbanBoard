@using KanbanBoard.Controllers
@model KanbanBoard.Models.Column
@{
}
<div class="card" >
    <div class="card-header">
            <h5>@Model.Name</h5>
            <a  asp-controller="Columns" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit"></i></a> |
            <a  asp-controller="Columns" asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-minus"></i></a>
        </div>
    <div class="card-body" id="droppable">
        @foreach (var item in Model.Cards)
        {
            @await Html.PartialAsync("~/Views/Cards/_CardDetails.cshtml", item)
        }
    </div>
</div>